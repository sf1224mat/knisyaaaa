<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCoffeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_below="@+id/tvCoffeName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCoffeName"
        android:layout_alignStart="@+id/tvCoffeName"
        android:layout_below="@+id/ivThumbnail"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnBuy"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorTextHint"
        android:text="Buy"
        android:layout_below="@+id/radioButton2"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHarga"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/btnBuy"
        android:layout_toStartOf="@+id/btnBuy"
        android:text="M" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_centerHorizontal="true"
        android:text="L" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_toEndOf="@+id/btnBuy"
        android:layout_toRightOf="@+id/btnBuy"
        android:text="XL" />
</RelativeLayout>